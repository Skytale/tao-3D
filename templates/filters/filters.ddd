        color "white"
        line_color "gray"
        line_width 1
        rounded_rectangle -500, 150, 200, 30, 15
        color "font"
        line_color "font"
        text_box -500, 150, 200, 30,
            align_center
            gaussian_txt tao_language
        on_click
            filter := 1

