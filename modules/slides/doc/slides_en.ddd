// slides.ddd
import Transitions
import Slides


// Apply default theme (not useful)
theme "Default"


// slides.ddd
import Transitions
import Slides


main_title_slide "Main title",
// ----------------------------------------------------------------------------
//   Create a main slide with title and subtitle
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    title text "Main title" // Add main title on the slide
    subtitle text "Subtitle"   // Add subtitle on the slide


section_slide "First Section",
// ----------------------------------------------------------------------------
//   Create a simple slide with section title
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    title text "First section" // Add section title on the slide


picture_slide "Slide with image",
// ----------------------------------------------------------------------------
//   Create a simple slide for picture
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    // Get image from internet
    image 0, 0, 100%, 100%, "http://www.inc.com/uploaded_files/image/create-a-great-powerpoint-presentation-Steve-Jobs-pop_7110.jpg"


slide "Slide with bullet points",
// ----------------------------------------------------------------------------
//   Create a simple slide with bullet points
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    *"First-level bullet"
    ** "Second-level bullet"
    --                        // Separator
    *"First-level bullet"
    ** "Second-level bullet"
    *** "Third-level bullet"
    --                        // Separator
    *"First-level bullet"
    ** "Second-level bullet"
    *** "Third-level bullet"


section_slide "Second Section",
// ----------------------------------------------------------------------------
//   Create a simple slide with section title
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    title text "Second section" // Add section title on the slide


title_slide "Slide with two images",
// ----------------------------------------------------------------------------
//   Create a simple slide with left and right pictures
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    left_picture
        image 0, 0, 80%, 80%, "http://www.inc.com/uploaded_files/image/create-a-great-powerpoint-presentation-Steve-Jobs-pop_7110.jpg"
    right_picture
        image 0, 0, 80%, 80%, "http://www.inc.com/uploaded_files/image/create-a-great-powerpoint-presentation-Steve-Jobs-pop_7110.jpg"


title_slide "Slide with two columns",
// ----------------------------------------------------------------------------
//   Create a simple slide with left and right columns
// ----------------------------------------------------------------------------
    transition_ft_wipe 1, 0
    left_column
        +"First-level bullet"
        ++"Second-level bullet"
        ++"Second-level bullet"
        --
        +"First-level bullet"
        ++"Second-level bullet"
    right_column
        +"First-level bullet"
        ++"Second-level bullet"
        ++"Second-level bullet"
        --
        +"First-level bullet"
        ++"Second-level bullet"
