// A few colors we selected for the theme (these are from the Taodyne palette)
theme_color "Keyboard:red"       -> "#AA0022"
theme_color "Keyboard:orange"    -> "#DD3311"
theme_color "Keyboard:yellow"    -> "#EEAA11"
theme_color "Keyboard:green"     -> "#88BB00"
theme_color "Keyboard:ocean"     -> "#229988"
theme_color "Keyboard:sky"       -> "#3399FF"
theme_color "Keyboard:navy"      -> "#003366"
theme_color "Keyboard:purple"    -> "#CC0099"
theme_color "Keyboard:grey"      -> "#555"
theme_color "Keyboard:lightblue" -> "#3399FF"
theme_color "Keyboard:darkblue"  -> "#003366"
theme_color "Keyboard:darkgreen" -> "#006633"
theme_color "Keyboard:blue1"     -> "#D0EAF0"
theme_color "Keyboard:blue2"     -> "#8FB4CB"
theme_color "Keyboard:blue3"     -> "#7AA9C1"
theme_color "Keyboard:blue4"     -> "#1D456B"
theme_color "Keyboard:brown"     -> "#7E3830"


// Colors that we will use as primary, secondary, text and borders
theme_item_color "Keyboard:text"      -> color "Keyboard:black"
theme_item_color "Keyboard:main"      -> color theme_color "Keyboard:red"
theme_item_color "Keyboard:primary"   -> color theme_color "Keyboard:brown"
theme_item_color "Keyboard:secondary" -> color theme_color "Keyboard:red"
theme_item_color "Keyboard:highlight" -> color theme_color "Keyboard:navy"
theme_item_color "Keyboard:border"    -> color theme_color "Keyboard:brown", 0.3
theme_item_color "Keyboard:box"       -> color "Keyboard:transparent"; line_color theme_color "Keyboard:navy", 0.6; line_width 2


// ============================================================================
// 
//    Background pictures
// 
// ============================================================================

theme_background "Keyboard", "main" ->
// ----------------------------------------------------------------------------
//    Keyboard title background has rectangles at top and bottom
// ----------------------------------------------------------------------------
    clear_color 1, 1, 1, 1
    background -300,
        theme_item_color "Keyboard:border"
        rectangle 0, 0, slide_width * 1.1, slide_height * 0.9
        rectangle 0, slide_height * 0.5, slide_width * 1.1, slide_height * 0.2
        rectangle 0, -slide_height * 0.5, slide_width * 1.1, slide_height * 0.2


theme_background "Keyboard", "section" ->
// ----------------------------------------------------------------------------
//    Keyboard section background is the same
// ----------------------------------------------------------------------------
    clear_color 1, 1, 1, 1
    background -300,
        theme_item_color "Keyboard:border"
        rectangle 0, slide_height * 0.5, slide_width * 1.1, slide_height * 0.2
        rectangle 0, -slide_height * 0.5, slide_width * 1.1, slide_height * 0.2


theme_background "Keyboard", Kind:text ->
// ----------------------------------------------------------------------------
//    Keyboard background is solid white with a vertical bar on the left
// ----------------------------------------------------------------------------
    clear_color 1, 1, 1, 1
    background -300,
        theme_item_color "Keyboard:border"
        rectangle -slide_width * 0.5, 0, slide_width * 0.1, slide_height * 1.1



// ============================================================================
// 
//    Layout for the various kind of pages
// 
// ============================================================================

theme_layout "Keyboard", "main" ->
// ----------------------------------------------------------------------------
//    Centered flows
// ----------------------------------------------------------------------------
    flow 0, 0, 1800, 400, "title"
    flow 0, -400, 1800, 300, "subtitle"


theme_layout "Keyboard", "section" ->
// ----------------------------------------------------------------------------
//    Centered flows
// ----------------------------------------------------------------------------
    flow 0, 0, 1800, 400, "title"
    flow 0, -400, 1800, 300, "subtitle"


theme_layout "Keyboard", Kind:text ->
// ----------------------------------------------------------------------------
//    Centered flows
// ----------------------------------------------------------------------------
    flow 0, 470, 1800, 250, "title"

    flow 0, -150, 1800, 900, "story"
    flow 0, -150, 1800, 900, "picture"
    flow -475, -150, 850, 900, "left"
    flow  475, -150, 850, 900, "right"
    flow -475, -150, 850, 900, "leftpic"
    flow  475, -150, 850, 900, "rightpic"



// ============================================================================
// 
//    Style for the various components
// 
// ============================================================================

theme_style "Keyboard", Kind:text ->
// ----------------------------------------------------------------------------
//   Select the style for a given box
// ----------------------------------------------------------------------------
    font "TeX Gyre Adventor", "Arial", 80, bold
    align 0.0
    vertical_align 0.3




// ============================================================================
// 
//   Titles and subtitles
// 
// ============================================================================

theme_title "Keyboard", "main", Body ->
// ----------------------------------------------------------------------------
//    Keyboard main title (centered on the slide)
// ----------------------------------------------------------------------------
    text_flow "title",
        font "TeX Gyre Adventor", "Arial", 150, bold
        theme_item_color "Keyboard:main"
        align 0.5
        vertical_align 0.5
        Body


theme_subtitle "Keyboard", "main", Body ->
// ----------------------------------------------------------------------------
//    Keyboard main title (centered on the slide)
// ----------------------------------------------------------------------------
    text_flow "subtitle",
        font "TeX Gyre Adventor", "Arial", 90, bold
        theme_item_color "Keyboard:main"
        align 0.5
        paragraph_break
        Body


theme_title "Keyboard", "section", Body ->
// ----------------------------------------------------------------------------
//    Keyboard section title (centered on the slide)
// ----------------------------------------------------------------------------
    text_flow "title",
        font "TeX Gyre Adventor", "Arial", 120, bold
        theme_item_color "Keyboard:primary"
        align 0.5
        vertical_align 0.5
        Body


theme_subtitle "Keyboard", "section", Body ->
// ----------------------------------------------------------------------------
//    Keyboard section title (centered on the slide)
// ----------------------------------------------------------------------------
    text_flow "subtitle",
        font "TeX Gyre Adventor", "Arial", 85, bold
        theme_item_color "Keyboard:secondary"
        align 0.5
        paragraph_break
        Body


theme_title "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard title is at the top
// ----------------------------------------------------------------------------
    text_flow "title",
        font "TeX Gyre Adventor", "Arial", 80, bold
        theme_item_color "Keyboard:primary"
        align 0.5
        vertical_align 0.5
        Body


theme_subtitle "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard subtitle is below main title
// ----------------------------------------------------------------------------
    text_flow "title",
        font "TeX Gyre Adventor", "Arial", 60, bold
        theme_item_color "Keyboard:highlight"
        align 0.5
        paragraph_break
        Body



// ============================================================================
// 
//   Contents
// 
// ============================================================================

theme_picture "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard picture box
// ----------------------------------------------------------------------------
    contents 0,
        translatey -150
        color "Keyboard:white"
        Body


theme_story "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard story box
// ----------------------------------------------------------------------------
    theme_style "Keyboard", Kind
    text_flow "story", Body


theme_left_column "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard left column
// ----------------------------------------------------------------------------
    theme_style "Keyboard", Kind
    text_flow "left", Body


theme_right_column "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard right column
// ----------------------------------------------------------------------------
    theme_style "Keyboard", Kind
    text_flow "right", Body


theme_left_column_picture "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard left column picture
// ----------------------------------------------------------------------------
    contents 0,
        translate -475, -150, 0
        Body


theme_right_column_picture "Keyboard", Kind:text, Body ->
// ----------------------------------------------------------------------------
//    Keyboard right column picture
// ----------------------------------------------------------------------------
    contents 0,
        translate 475, -150, 0
        Body



// ============================================================================
// 
//   Text boxes
// 
// ============================================================================

theme_box Theme:text, Kind:text, X:real, Y:real, W:real, H:real, Body ->
// ----------------------------------------------------------------------------
//   Draw a Keyboard text box
// ----------------------------------------------------------------------------
    contents -10,
        theme_item_color "Keyboard:box"
        rectangle X, Y, W + 10, H + 10
    contents 0,
        text_box X, Y, W, H, Body


theme_flow Theme:text, Kind:text, X:real, Y:real, W:real, H:real, Flow ->
// ----------------------------------------------------------------------------
//   Draw a Keyboard text box containing a flow
// ----------------------------------------------------------------------------
    contents -10,
        theme_item_color "Keyboard:box"
        rectangle X, Y, W + 10, H + 10
    contents 0,
        Body
        text_box Flow, X, Y, W, H



// ============================================================================
// 
//    Bullet formatting
// 
// ============================================================================

theme_bullet_size "Keyboard", Kind:text, 1 -> 62
theme_bullet_size "Keyboard", Kind:text, 2 -> 52
theme_bullet_size "Keyboard", Kind:text, Level:integer -> 42
// ----------------------------------------------------------------------------
//    Keyboard size of a bullet
// ----------------------------------------------------------------------------


theme_bullet_color "Keyboard:default", Kind:text, 1 ->
// ----------------------------------------------------------------------------
//    Keyboard bullet fill color for first level
// ----------------------------------------------------------------------------
    theme_item_color "Keyboard:primary"


theme_bullet_color "Keyboard:default", Kind:text, Level:integer ->
// ----------------------------------------------------------------------------
//    Keyboard bullet fill color for all levels
// ----------------------------------------------------------------------------
    theme_item_color "Keyboard:secondary"


theme_bullet_style "Keyboard", Kind:text, Level:integer ->
// ----------------------------------------------------------------------------
//   Keyboard style of a bullet point
// ----------------------------------------------------------------------------
    plain
    paragraph_space 30, 30
    font_size theme_bullet_size (theme, Kind, Level)
    theme_item_color "Keyboard:text"


theme_bullet_picture "Keyboard", Kind:text, Level:integer ->
// ----------------------------------------------------------------------------
//    Keyboard style of a bullet
// ----------------------------------------------------------------------------
    theme_bullet_color "Keyboard:default", Kind, Level
    theme_bullet_draw S:real -> circle -50% * S, 30% * S, 12% * S
    theme_bullet_draw theme_bullet_size (theme, Kind, Level)
