import DIP_null 1.0



SessionID -> "1234E55A1"
GameID -> "E55A1234"

dip_start_session SessionID
dip_null_start GameId

panel_page "Panel page",
    position_panel_informations

dip_null_end GameId
dip_end_session SessionID

// ============================================================================
//
//                     PANEL page
//
// ============================================================================

PANEL_DURATION -> 5
PANEL_INTRO_TXT -> CONTENT_TXT_PATH & "1d1f9f98-b16a-11e1-a77a-a3708061cfba.txt"


position_panel_informations ->
        locally
            scale_contents
            text_box 0, 50, 900, 300,
                vertical_align 0.5
                align 0.5
                font "Arial Rounded MT Bold", 70
                color "white"
                text load_text PANEL_INTRO_TXT
                
            if page_time > PANEL_DURATION then
                dip_next_page


panel_page T:text, Body ->
// ----------------------------------------------------------------------------
//   Define a basic slide for panel
// ----------------------------------------------------------------------------
    page T,
        dip_reset_settings
        dip_background
        clear_color 0, 0, 0, 1
        locally Body
