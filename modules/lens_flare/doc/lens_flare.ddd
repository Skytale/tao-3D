        add_flare FLARE3, 0.65, 0.1, 1.0, 1.0, 1.0, 0.2
        add_flare FLARE4, 0.85, 0.05, 1.0, 1.0, 1.0, 0.5
        add_flare FLARE5, 0.95, 0.3, 1.0, 1.0, 1.0, 0.2

