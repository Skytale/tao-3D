        lens_flare_source sx, sy, sz
        lens_flare_target tx, ty, tz
        add_flare FLARE0, 0.0, 0.6, 1.0, 1.0, 1.0, 1.0
        add_flare FLARE1, 0.0, 0.6, 1.0, 1.0, 1.0, 1.0
        add_flare FLARE2, 0.2, 0.15, 1.0, 1.0, 1.0, 0.1
