    left_picture
        translate 0, -100, -150
        rotatez 5
        movie 0, 0, 1.1, 1.1, "http://www.youtube.com/watch?v=I0pLmcx7aH4"
    right_column
        vertical_align 10%
        - "We wish you a Merry Christmas"
