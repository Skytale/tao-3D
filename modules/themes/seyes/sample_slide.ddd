theme "Seyes"
import VLCAudioVideo


main_title_slide "Main title",
    title
        text "Seyes Theme"
    subtitle
        text "A theme for classroom reports"


section_slide "Section title",
    title
        text "Section title"
    subtitle
        text "Section subtitle"


slide "Bullet points",
    * "Bullet points"
    ** "More bullet points"
    *** "Deeper"
    --
